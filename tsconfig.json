{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom"
        ],
        "strict": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "dist/es/",
        "declarationDir": "dist/@types",
    },
    "include": [
        "./src/**/*",
        "./types/**/*"
    ],
}